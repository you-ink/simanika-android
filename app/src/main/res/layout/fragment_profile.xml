<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:elevation="8dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/round_section"
        tools:context=".MenuFragment.ProfileFragment">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/profile"/>

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ananda Zakia Syahfitri"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/profile_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kepala Divisi Humas"
            android:textSize="15sp"
            android:textStyle="italic"
            android:textAlignment="center"
            android:paddingBottom="5dp" />

<!--        <ScrollView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="5dp">-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="0dp"
                    android:padding="10dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:startIconDrawable="@drawable/main_account_icon"
                        app:startIconTint="@color/color_30"
                        android:layout_marginTop="5dp"
                        app:boxStrokeColor="@color/color_30"
                        app:hintTextColor="@color/color_30"
                        app:passwordToggleTint="@color/color_30">
                        <EditText
                            android:id="@+id/profile_nama"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nama Lengkap"
                            android:text="John Doe"
                            android:textColor="@color/color_30"
                            android:enabled="false"
                            android:inputType="text"
                            android:background="@android:color/transparent"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:startIconDrawable="@drawable/main_badge_icon"
                        app:startIconTint="@color/color_30"
                        android:layout_marginTop="5dp"
                        app:boxStrokeColor="@color/color_30"
                        app:hintTextColor="@color/color_30"
                        app:passwordToggleTint="@color/color_30">
                        <EditText
                            android:id="@+id/profile_nim"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="NIM"
                            android:text="E31210529"
                            android:enabled="false"
                            android:textColor="@color/color_30"
                            android:inputType="text"
                            android:background="@android:color/transparent"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:startIconDrawable="@drawable/main_badge_icon"
                        app:startIconTint="@color/color_30"
                        android:layout_marginTop="5dp"
                        app:boxStrokeColor="@color/color_30"
                        app:hintTextColor="@color/color_30"
                        app:passwordToggleTint="@color/color_30">
                        <EditText
                            android:id="@+id/profile_angkatan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Angkatan"
                            android:text="2021"
                            android:enabled="false"
                            android:textColor="@color/color_30"
                            android:inputType="number"
                            android:background="@android:color/transparent"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:startIconDrawable="@drawable/main_email_icon"
                        app:startIconTint="@color/color_30"
                        android:layout_marginTop="5dp"
                        app:boxStrokeColor="@color/color_30"
                        app:hintTextColor="@color/color_30"
                        app:passwordToggleTint="@color/color_30">
                        <EditText
                            android:id="@+id/profile_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Email"
                            android:text="anandazakia7@gmail.com"
                            android:enabled="false"
                            android:textColor="@color/color_30"
                            android:inputType="textEmailAddress"
                            android:background="@android:color/transparent"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:startIconDrawable="@drawable/main_phone_icon"
                        app:startIconTint="@color/color_30"
                        android:layout_marginTop="5dp"
                        app:boxStrokeColor="@color/color_30"
                        app:hintTextColor="@color/color_30"
                        app:passwordToggleTint="@color/color_30">
                        <EditText
                            android:id="@+id/profile_telp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="No. Telepon"
                            android:text="082391833198"
                            android:enabled="false"
                            android:textColor="@color/color_30"
                            android:inputType="phone"
                            android:background="@android:color/transparent"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:startIconDrawable="@drawable/main_phone_icon"
                        app:startIconTint="@color/color_30"
                        android:layout_marginTop="5dp"
                        app:boxStrokeColor="@color/color_30"
                        app:hintTextColor="@color/color_30"
                        app:passwordToggleTint="@color/color_30">
                        <EditText
                            android:id="@+id/profile_alamat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Alamat"
                            android:text="Banyuwangi"
                            android:enabled="false"
                            android:textColor="@color/color_30"
                            android:inputType="phone"
                            android:background="@android:color/transparent"/>
                    </com.google.android.material.textfield.TextInputLayout>


                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:id="@+id/register_btn"
                        android:textSize="18sp"
                        android:backgroundTint="@color/main"
                        android:text="Edit Profile"
                        app:cornerRadius = "30dp"/>

                </LinearLayout>

            </LinearLayout>

<!--        </ScrollView>-->
    </LinearLayout>


</androidx.cardview.widget.CardView>

